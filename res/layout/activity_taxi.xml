<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_05"
    android:stretchColumns="*" >
    
    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stretchColumns="*" >

            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <ImageButton
                    android:id="@+id/ibt_mrt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:background="#00000000"
                    android:clickable="true"
                    android:gravity="center"
                    android:maxHeight="50dip"
                    android:maxWidth="50dip"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon_mrt" />

                <ImageButton
                    android:id="@+id/ibt_bus"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:background="#00000000"
                    android:clickable="true"
                    android:gravity="center"
                    android:maxHeight="50dip"
                    android:maxWidth="50dip"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon_bus" />

                <ImageButton
                    android:id="@+id/ibt_train"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:background="#00000000"
                    android:clickable="true"
                    android:gravity="center"
                    android:maxHeight="50dip"
                    android:maxWidth="50dip"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon_train" />

                <ImageButton
                    android:id="@+id/ibt_back"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:background="#00000000"
                    android:clickable="true"
                    android:gravity="center"
                    android:maxHeight="50dip"
                    android:maxWidth="50dip"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon_back" />
            </TableRow>

        </TableLayout>

    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stretchColumns="*" >

            <TableRow
                android:id="@+id/tableRow4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:gravity="center"
                    android:text="捷運" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:gravity="center"
                    android:text="公車" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:gravity="center"
                    android:text="火車" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:gravity="center"
                    android:text="返回" />
            </TableRow>

        </TableLayout>

    </TableRow>
    
    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <WebView
            android:id="@+id/mybrowser"
            android:layout_width="fill_parent"
            android:layout_height="350dip" />
       
    </TableRow>
    
    <TableRow >
        <TextView 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>
    </TableRow>
    
    <TableRow>

	    <TableLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:stretchColumns="*" >
	
	        <TableRow
	            android:id="@+id/tableRow8"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content" >
	
	            <Button
	                android:id="@+id/bt_netcall"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="網路叫車" />
	
	            <Button
	                android:id="@+id/bt_carcall"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="車行電話" />
	
	            <Button
	                android:id="@+id/bt_taxicost"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="價位" />
	        </TableRow>
	
	    </TableLayout>

    </TableRow>

</TableLayout>