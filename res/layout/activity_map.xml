<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_05"
    android:stretchColumns="*" >
    
    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </TableRow>
    
    <WebView
		android:id="@+id/mybrowser"
		android:layout_width="fill_parent"
	    android:layout_height="350dip"
	    android:layout_above="@+id/button1"
	    android:layout_alignLeft="@+id/button1"
	    android:layout_alignParentTop="true" />

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </TableRow>    
   
    <TableRow>

        <ImageButton
            android:id="@+id/ibt_highway"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:background="#00000000"
            android:clickable="true"
            android:gravity="center"
            android:maxHeight="50dip"
            android:maxWidth="50dip"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_highway" />

            <ImageButton
                android:id="@+id/ibt_mainroad"
                android:layout_height="match_parent"
	            android:adjustViewBounds="true"
	            android:background="#00000000"
	            android:clickable="true"
	            android:gravity="center"
	            android:maxHeight="50dip"
	            android:maxWidth="50dip"
	            android:scaleType="fitCenter"
                android:src="@drawable/icon_mainroad" />

	    	<ImageButton
                android:id="@+id/ibt_traffic"
                android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:adjustViewBounds="true"
	            android:background="#00000000"
	            android:clickable="true"
	            android:gravity="center"
	            android:maxHeight="50dip"
	            android:maxWidth="50dip"
	            android:scaleType="fitCenter"
                android:src="@drawable/icon_traffic" />

            <ImageButton
                android:id="@+id/ibt_back"
                android:layout_height="match_parent"
	            android:adjustViewBounds="true"
	            android:background="#00000000"
	            android:clickable="true"
	            android:gravity="center"
	            android:maxHeight="50dip"
	            android:maxWidth="50dip"
	            android:scaleType="fitCenter"
                android:src="@drawable/icon_back" />

	 </TableRow>
	 
    <TableRow >
        <TextView
	        android:id="@+id/textView3"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        android:text="高速公路"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="快速道路" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="交通資訊" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="即時路況" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="交通" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="返回" />

    </TableRow>

</TableLayout>