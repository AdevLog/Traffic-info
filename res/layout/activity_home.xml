<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Home"
    android:background="@drawable/bg_03" >

    <ImageButton
		android:id="@+id/ibt_map"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:layout_alignTop="@+id/ibt_about"
		android:adjustViewBounds="true"
		android:clickable="true"
		android:gravity="center"
		android:maxHeight="120dip"
		android:maxWidth="120dp"
		android:scaleType="fitCenter"
		android:src="@drawable/icon_map" />
	
	<TextView
		android:id="@+id/textView4"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignLeft="@+id/textView1"
		android:layout_below="@+id/ibt_exit"
		android:text="離開"
		android:textSize="20sp" />
	
	<ImageButton
		android:id="@+id/ibt_exit"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignLeft="@+id/ibt_traffic"
		android:layout_below="@+id/ibt_about"
		android:layout_marginTop="32dp"
		android:adjustViewBounds="true"
		android:clickable="true"
		android:gravity="center"
		android:maxHeight="100dip"
		android:maxWidth="100dip"
		android:scaleType="fitCenter"
		android:src="@drawable/icon_exit" />
	
	<TextView
		android:id="@+id/textView2"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignLeft="@+id/ibt_about"
		android:layout_below="@+id/ibt_about"
		android:layout_marginLeft="30dp"
		android:text="關於"
		android:textSize="20sp" />
	
	<TextView
		android:id="@+id/textView3"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/ibt_about"
		android:layout_marginLeft="37dp"
		android:layout_toRightOf="@+id/ibt_exit"
		android:text="地圖"
		android:textSize="20sp" />
	
	<TextView
		android:id="@+id/textView1"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/ibt_traffic"
		android:layout_centerHorizontal="true"
		android:text="交通"
		android:textSize="20sp" />
	
	<ImageButton
		android:id="@+id/ibt_about"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/textView1"
		android:layout_marginRight="12dp"
		android:layout_marginTop="17dp"
		android:layout_toLeftOf="@+id/ibt_exit"
		android:adjustViewBounds="true"
		android:clickable="true"
		android:gravity="center"
		android:maxHeight="100dip"
		android:maxWidth="100dip"
		android:scaleType="fitCenter"
		android:src="@drawable/icon_about" />

	<ImageButton
	    android:id="@+id/ibt_traffic"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentTop="true"
	    android:layout_centerHorizontal="true"
	    android:layout_marginTop="23dp"
	    android:adjustViewBounds="true"
	    android:clickable="true"
	    android:gravity="center"
	    android:maxHeight="100dip"
	    android:maxWidth="100dip"
	    android:scaleType="fitCenter"
	    android:src="@drawable/icon_traffic" />

</RelativeLayout>