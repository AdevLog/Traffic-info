<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_05"
    android:stretchColumns="*" >
    
    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stretchColumns="*" >

            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <ImageButton
                    android:id="@+id/ibt_mrt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:background="#00000000"
                    android:clickable="true"
                    android:gravity="center"
                    android:maxHeight="50dip"
                    android:maxWidth="50dip"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon_mrt" />

                <ImageButton
                    android:id="@+id/ibt_bus"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:background="#00000000"
                    android:clickable="true"
                    android:gravity="center"
                    android:maxHeight="50dip"
                    android:maxWidth="50dip"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon_bus" />

                <ImageButton
                    android:id="@+id/ibt_taxi"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:background="#00000000"
                    android:clickable="true"
                    android:gravity="center"
                    android:maxHeight="50dip"
                    android:maxWidth="50dip"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon_taxi" />

                <ImageButton
                    android:id="@+id/ibt_back"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:background="#00000000"
                    android:clickable="true"
                    android:gravity="center"
                    android:maxHeight="50dip"
                    android:maxWidth="50dip"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon_back" />
            </TableRow>
        </TableLayout>
    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stretchColumns="*" >

            <TableRow
                android:id="@+id/tableRow4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:gravity="center"
                    android:text="捷運" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:gravity="center"
                    android:text="公車" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:gravity="center"
                    android:text="計程車" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:gravity="center"
                    android:text="返回" />
            </TableRow>
        </TableLayout>
    </TableRow>

    <TableRow>

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TableRow
                android:id="@+id/tableRow5"
                android:layout_width="fill_parent"
                android:layout_height="match_parent" >

                <WebView
                    android:id="@+id/mybrowser"
                    android:layout_width="fill_parent"
                    android:layout_height="350dip"
                    android:layout_above="@+id/button1"
                    android:layout_alignLeft="@+id/button1"
                    android:layout_alignParentTop="true"
                    android:layout_weight="0.90" />
            </TableRow>
        </TableLayout>
    </TableRow>

    <TableRow>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    </TableRow>

    <TableRow>

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stretchColumns="*" >

            <TableRow
                android:id="@+id/tableRow6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/bt_traintime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@+id/mybrowser"
                    android:layout_alignTop="@+id/button1"
                    android:text="時間查詢" />

                <Button
                    android:id="@+id/bt_trainticket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:text="網路訂票" />
            </TableRow>
        </TableLayout>
    </TableRow>

</TableLayout>